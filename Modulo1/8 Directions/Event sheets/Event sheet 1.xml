<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>Event sheet 1</name>
    <events>
        <comment>Evento para que a caixa acompanhe o movimento do cursor do mouse</comment>
        <event-block sid="604474468244279">
            <conditions>
                <condition id="-1" name="Every tick" sid="231531565263523" type="System" />
            </conditions>
            <actions>
                <action id="-22" name="Set angle toward position" sid="800748588045067" type="caixa">
                    <param id="0" name="X">Mouse.X</param>
                    <param id="1" name="Y">Mouse.Y</param>
                </action>
            </actions>
        </event-block>
        <comment>Evento para que ao clicar com o botão esquerdo do mouse o objeto caixa crie o objeto bala</comment>
        <event-block sid="412864859205035">
            <conditions>
                <condition id="0" name="On click" sid="265098864002623" type="Mouse">
                    <param id="0" name="Mouse button">0</param>
                    <param id="1" name="Click type">0</param>
                </condition>
            </conditions>
            <actions>
                <action id="0" name="Spawn another object" sid="954868472019363" type="caixa">
                    <param id="0" name="Object">bala</param>
                    <param id="1" name="Layer">0</param>
                    <param id="2" name="Image point">0</param>
                </action>
            </actions>
        </event-block>
    </events>
</c2eventsheet>
